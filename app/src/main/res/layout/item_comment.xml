<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        <TextView
            android:id="@+id/txv_nome_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/imv_user"
            android:layout_toRightOf="@+id/imv_user"
            android:text="Eduardo Tomasi Margoto Margoto"
            android:ellipsize="end"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/abc_primary_text_material_dark"
            android:singleLine="true"
            android:width="200dp" />

        <TextView
            android:id="@+id/txv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txv_nome_user"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imv_user"
            android:text="Eu odeio essa serie, tinha que melhorar muito, Horrivel... claladasdasd"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="15dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/txv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="(qui) 21/04/2016 17:55"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />
    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.08dp"
        android:layout_alignBottom="@id/rl_view"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorSecondText" />


</RelativeLayout>