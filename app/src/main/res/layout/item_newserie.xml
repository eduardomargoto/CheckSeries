<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:contentPaddingBottom="0dp"
    app:contentPaddingTop="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rl_newserie_view"
        android:background="@color/colorSecondText"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/iv_serie"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@null"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"/>

        <TextView
            android:id="@+id/tv_name_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:elevation="4dp"
            android:ellipsize="end"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_ano_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_serie"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:elevation="4dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_addserie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@null" />

        <TextView
            android:id="@+id/tv_serieid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/iv_addserie"
            android:visibility="invisible" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

