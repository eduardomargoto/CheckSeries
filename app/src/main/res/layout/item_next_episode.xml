<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="180dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    app:contentPaddingBottom="0dp"
    app:contentPaddingTop="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecondText"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/iv_serie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="180dp"
            android:adjustViewBounds="true"
            android:background="@color/colorSecondText" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="18sp"
            tools:text="Supernatural"/>

        <TextView
            android:id="@+id/tv_nextepisode_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="14sp"
            tools:text="1x01 - Pilot"/>

        <TextView
            android:id="@+id/tv_nextepisodetime_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nextepisode_serie"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="12sp"
            tools:text="10/03/2011"/>

        <TextView
            android:id="@+id/tv_network_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:layout_toLeftOf="@id/iv_options_serie"
            android:layout_toStartOf="@id/iv_options_serie"
            android:paddingBottom="14dp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="12sp"
            tools:text="The CW Television Network"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>
