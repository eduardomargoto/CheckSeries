<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/BackgroundCards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">


    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_serie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_background"/>

        <TextView
            android:id="@+id/tv_name_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:elevation="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_nextepisode_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_serie"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_nextepisodetime_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nextepisode_serie"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/ic_check_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nextepisodetime_serie"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/ic_check" />

        <ProgressBar
            android:id="@+id/pb_episodes"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nextepisodetime_serie"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/ic_check_episode" />

        <TextView
            android:id="@+id/tv_size_episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/pb_episodes"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="-8dp"
            android:paddingRight="20dp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingRight="14dp"
            android:paddingTop="10dp" />

        <ImageView
            android:id="@+id/iv_options_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingBottom="10dp"
            android:paddingRight="14dp"
            android:src="@drawable/dots_vertical" />

        <TextView
            android:id="@+id/tv_network_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@id/iv_options_serie"
            android:paddingBottom="14dp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="-4"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/colorTextIcon"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_serieid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_favorite"
            android:visibility="invisible" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
